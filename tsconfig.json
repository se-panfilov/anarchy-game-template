{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@E2E": ["apps/e2e/src/index.ts"],
      "@E2E/*": ["apps/e2e/src/*"],
      "@Menu": ["packages/menu/src/index.ts"],
      "@Menu/*": ["packages/menu/src/*"],
      "@GUI": ["packages/gui/src/index.ts"],
      "@GUI/*": ["packages/gui/src/*"],

      "three/examples/jsm/*": ["node_modules/@types/three/examples/jsm/*"],
      "three/addons/*": ["node_modules/@types/three/examples/jsm/*"],
      "three/src/*": ["node_modules/@types/three/src/*"],
      "date-fns/locale/types": ["node_modules/date-fns/locale/types.d.ts"],
      "@formatjs/intl/src/types": ["node_modules/@formatjs/intl/src/types.d.ts"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "useDefineForClassFields": true
  }
}
