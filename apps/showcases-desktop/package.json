{
  "name": "showcases-desktop",
  "author": "S. Panfilov",
  "private": true,
  "version": "2.12.8",
  "description": "Anarchy Desktop Showcases  – a desktop wrapper-application for showcases-core.",
  "keywords": [
    "anarchy",
    "hellpig",
    "showcases",
    "anarchy-showcases",
    "desktop"
  ],
  "main": "dist/desktop-main.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:se-panfilov/anarchy-engine.git",
    "directory": "apps/showcases-desktop"
  },
  "homepage": "https://github.com/se-panfilov/anarchy-engine/tree/main/apps/showcases-desktop#readme",
  "bugs": {
    "url": "https://github.com/se-panfilov/anarchy-engine/issues"
  },
  "license": "MIT",
  "scripts": {
    "after:release": "npm run tracking:sourcemaps:prod",
    "build:dev:linux:app:arm64": "npm run pack -- --mode=dev.linux dir --arm64",
    "build:dev:linux:app:x64": "npm run pack -- --mode=dev.linux dir --x64",
    "build:dev:linux:appimage:arm64": "npm run pack -- --mode=dev.linux AppImage --arm64",
    "build:dev:linux:appimage:x64": "npm run pack -- --mode=dev.linux AppImage --x64",
    "build:dev:mac:app:arm64": "npm run pack -- --mode=dev.mac dir --arm64",
    "build:dev:mac:app:universal": "npm run pack -- --mode=dev.mac.app dir --universal",
    "build:dev:mac:app:x64": "npm run pack -- --mode=dev.mac dir --x64",
    "build:dev:mac:dmg:arm64": "npm run pack -- --mode=dev.mac dmg --arm64",
    "build:dev:mac:dmg:universal": "npm run pack -- --mode=dev.mac dmg --universal",
    "build:dev:mac:dmg:x64": "npm run pack -- --mode=dev.mac dmg --x64",
    "build:dev:win:app:arm64": "npm run pack -- --mode=dev.win dir --arm64",
    "build:dev:win:app:x64": "npm run pack -- --mode=dev.win dir --x64",
    "build:dev:win:nsis:arm64": "npm run pack -- --mode=dev.win nsis --arm64",
    "build:dev:win:nsis:x64": "npm run pack -- --mode=dev.win nsis --x64",
    "build:e2e:linux:app:arm64": "npm run pack -- --mode=e2e.linux dir --arm64",
    "build:e2e:linux:app:x64": "npm run pack -- --mode=e2e.linux dir --x64",
    "build:e2e:mac:app:arm64": "npm run pack -- --mode=e2e.mac dir --arm64",
    "build:e2e:mac:app:universal": "npm run pack -- --mode=e2e.mac.app dir --universal",
    "build:e2e:mac:app:x64": "npm run pack -- --mode=e2e.mac dir --x64",
    "build:e2e:win:app:arm64": "npm run pack -- --mode=e2e.win dir --arm64",
    "build:e2e:win:app:x64": "npm run pack -- --mode=e2e.win dir --x64",
    "build:electron": "electron-builder",
    "build:prepare": "node ./scripts/prebuild.js",
    "build:prod:linux:app:arm64": "npm run pack -- --mode=prod.linux dir --arm64",
    "build:prod:linux:app:x64": "npm run pack -- --mode=prod.linux dir --x64",
    "build:prod:linux:appimage:arm64": "npm run pack -- --mode=prod.linux AppImage --arm64",
    "build:prod:linux:appimage:x64": "npm run pack -- --mode=prod.linux AppImage --x64",
    "build:prod:mac:app:arm64": "npm run pack -- --mode=prod.mac dir --arm64",
    "build:prod:mac:app:universal": "npm run pack -- --mode=prod.mac.app dir --universal",
    "build:prod:mac:app:x64": "npm run pack -- --mode=prod.mac dir --x64",
    "build:prod:mac:dmg:arm64": "npm run pack -- --mode=prod.mac dmg --arm64",
    "build:prod:mac:dmg:universal": "npm run pack -- --mode=prod.mac dmg --universal",
    "build:prod:mac:dmg:x64": "npm run pack -- --mode=prod.mac dmg --x64",
    "build:prod:win:app:arm64": "npm run pack -- --mode=prod.win dir --arm64",
    "build:prod:win:app:x64": "npm run pack -- --mode=prod.win dir --x64",
    "build:prod:win:nsis:arm64": "npm run pack -- --mode=prod.win nsis --arm64",
    "build:prod:win:nsis:x64": "npm run pack -- --mode=prod.win nsis --x64",
    "check:circular-dependencies": "npx dpdm -T --no-warning --no-tree --exit-code circular:1 ./src/desktop-main.ts",
    "clean:prebuild": "node ./scripts/clean.js",
    "copy:legal-to-assets": "node ../../packages/anarchy-shared/ScriptUtils/CopyDir.js from=./legal to=./assets/legal",
    "generate:legal": "npm run generate:legal:3rd-party-licenses && npm run generate:legal:notice && npm run generate:legal:files && npm run generate:legal:sbom && npm run copy:legal-to-assets",
    "generate:legal:3rd-party-licenses": "npm run -w @hellpig/anarchy-legal generate:licenses -- --workspace apps/showcases-desktop --out ../../apps/showcases-desktop/legal/THIRD_PARTY_LICENSES.md",
    "generate:legal:files": "npm run -w @hellpig/anarchy-legal generate:files -- --workspace apps/showcases-desktop --out ../../apps/showcases-desktop",
    "generate:legal:notice": "npm run -w @hellpig/anarchy-legal generate:notice -- --audit --strict --workspace apps/showcases-desktop --source ../../apps/showcases-desktop/legal/THIRD_PARTY_LICENSES.md --out ../../apps/showcases-desktop/legal/NOTICE.md",
    "generate:legal:sbom": "npm sbom --sbom-format=cyclonedx --package-lock-only --omit=dev > ./compliance/sbom/sbom.cdx.json",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "make:png-to-ico": "node ../../packages/anarchy-shared/ScriptUtils/MakeIcoFromPng --in assets/icon.png --out assets/icon.ico --size 256",
    "pack": "node ./scripts/package.js",
    "pr:guard:ci": "npm run ts:check && npm run check:circular-dependencies && npm run lint",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "preview": "vite preview --outDir dist-web",
    "sanitize-assets": "node ../../packages/anarchy-shared/ScriptUtils/SanitizeAssets.js ./assets",
    "start:dev": "node ./scripts/start.js --mode=dev",
    "start:dev:linux": "node ./scripts/start.js --mode=dev.linux",
    "start:dev:mac": "node ./scripts/start.js --mode=dev.mac",
    "start:dev:win": "node ./scripts/start.js --mode=dev.win",
    "start:e2e:mac": "node ./scripts/start.js --mode=e2e.mac",
    "start:prod:linux": "node ./scripts/start.js --mode=prod.linux",
    "start:prod:mac": "node ./scripts/start.js --mode=prod.mac",
    "start:prod:win": "node ./scripts/start.js --mode=prod.win",
    "tracking:sourcemaps:prod:linux": "node ../../packages/anarchy-tracking/ScriptUtils/UploadSourcemaps.js --url-prefix app:///dist/ --mode prod.linux",
    "tracking:sourcemaps:prod:mac": "node ../../packages/anarchy-tracking/ScriptUtils/UploadSourcemaps.js --url-prefix app:///dist/ --mode prod.mac",
    "tracking:sourcemaps:prod:mac:dry": "node ../../packages/anarchy-tracking/ScriptUtils/UploadSourcemaps.js --url-prefix app:///dist/ --mode prod.mac --dry-run",
    "tracking:sourcemaps:prod:win": "node ../../packages/anarchy-tracking/ScriptUtils/UploadSourcemaps.js --url-prefix app:///dist/ --mode prod.win",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit"
  },
  "dependencies": {
    "@hellpig/anarchy-shared": "*",
    "showcases-core": "*",
    "showcases-shared": "*"
  },
  "devDependencies": {
    "electron": "39.2.7",
    "electron-builder": "26.0.12",
    "electron-reloader": "1.2.3",
    "nanoid": "5.1.6",
    "rollup-plugin-copy": "3.5.0",
    "typescript": "5.9.3",
    "vite-plugin-static-copy": "3.1.4",
    "vite-tsconfig-paths": "6.0.3"
  },
  "build": {
    "appId": "com.anarchy.showcases.demo.desktop",
    "productName": "AnarchyDemo",
    "publish": [
      {
        "provider": "github",
        "owner": "se-panfilov",
        "repo": "anarchy-engine",
        "private": false
      }
    ],
    "copyright": "Copyright © 20XX ADD YOUR NAME",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "./legal/**",
      "./assets/legal/**",
      "CHANGELOG.md",
      "NOTICE.md",
      "LICENSE",
      "README.md",
      "dist/dist-desktop/**",
      "dist/desktop-main.js",
      "dist/preload.js",
      "!dist/package.json"
    ],
    "asar": true,
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false,
      "category": "public.app-category.games",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icon.ico",
      "signtoolOptions": {
        "signingHashAlgorithms": [
          "sha256"
        ],
        "timeStampServer": "http://timestamp.sectigo.com"
      },
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage",
        "tar.gz"
      ],
      "icon": "assets/icon.png",
      "maintainer": "Sergei Panfilov <pnf036+anarchy@gmail.com>",
      "synopsis": "ADD YOUR GAME SYNOPSIS",
      "description": "ADD YOUR GAME DESCRIPTION",
      "category": "Game",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    }
  }
}
