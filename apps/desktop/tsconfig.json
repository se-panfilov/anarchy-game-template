{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@Showcases/Desktop/*": ["apps/desktop/src/*"],
      "@Showcases/Shared": ["packages/shared/src/index.ts"],
      "@Showcases/Shared/*": ["packages/shared/src/*"],
      "@Showcases/i18n": ["packages/i18n/src/index.ts"],
      "@Showcases/i18n/*": ["packages/i18n/src/*"]
    },
    "sourceMap": false,
    "noEmit": false
  },
  "include": ["src/desktop-main.ts", "preload.ts", "types"],
  "exclude": ["dist", "node_modules"]
}
