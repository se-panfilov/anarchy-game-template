{
  "name": "core",
  "author": "XXX_AUTHOR_SHORT",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:se-panfilov/anarchy-engine.git",
    "directory": "apps/core"
  },
  "homepage": "XXX_HOMEPAGE_URL/tree/main/apps/core#readme",
  "bugs": {
    "url": "https://github.com/se-panfilov/anarchy-engine/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.js"
    },
    "./assets/*": "./dist/assets/*",
    "./legal/*": "./legal/*"
  },
  "license": "MIT",
  "description": "Anarchy Showcases Core â€“ an application with demos for Anarchy-Engine.",
  "keywords": [
    "XXX_GAME_TECH_NAME"
  ],
  "files": [
    "./legal/**",
    "CHANGELOG.md",
    "NOTICE.md",
    "LICENSE",
    "README.md",
    "dist-web/"
  ],
  "scripts": {
    "after:release": "npm run tracking:sourcemaps:web:prod",
    "build:dev:all": "npm run build:dev:desktop && npm run build:dev:mobile && npm run build:dev:web",
    "build:dev:desktop": "rimraf dist-desktop && vite build --mode dev.desktop",
    "build:dev:mobile": "rimraf dist-mobile && vite build --mode dev.mobile",
    "build:dev:web": "rimraf dist-web && vite build --mode dev.web",
    "build:prod:all": "npm run build:prod:desktop && npm run build:prod:mobile && npm run build:prod:web",
    "build:prod:desktop": "rimraf dist-desktop && vite build --mode production.desktop",
    "build:prod:mobile": "rimraf dist-mobile && vite build --mode production.mobile",
    "build:prod:web": "rimraf dist-web && vite build --mode production.web",
    "check:circular-dependencies": "npx dpdm -T --no-warning --no-tree --exit-code circular:1 ./src/index.ts",
    "copy:legal-to-public": "node ../../packages/anarchy-shared/ScriptUtils/CopyDir.js from=./legal to=./public/legal",
    "generate:legal": "npm run generate:legal:3rd-party-licenses && npm run generate:legal:notice && npm run generate:legal:files && npm run generate:legal:sbom && npm run prettier && npm run copy:legal-to-public",
    "generate:legal:3rd-party-licenses": "npm run -w @hellpig/anarchy-legal generate:licenses -- --workspace apps/core --out /legal/THIRD_PARTY_LICENSES.md",
    "generate:legal:files": "npm run -w @hellpig/anarchy-legal generate:files -- --workspace apps/core --out ",
    "generate:legal:notice": "npm run -w @hellpig/anarchy-legal generate:notice -- --audit --strict --workspace apps/core --source /legal/THIRD_PARTY_LICENSES.md --out /legal/NOTICE.md",
    "generate:legal:sbom": "npm sbom --sbom-format=cyclonedx --package-lock-only --omit=dev > ./compliance/sbom/sbom.cdx.json",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "pr:guard:ci": "npm run ts:check && npm run check:circular-dependencies && npm run lint",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "preview": "vite preview --outDir dist-web",
    "sanitize-assets": "node ../../packages/anarchy-shared/ScriptUtils/SanitizeAssets.js ./public",
    "start:dev": "vite --mode dev.web --host",
    "start:e2e": "vite --mode e2e.web --port 5073 --logLevel error",
    "tracking:sourcemaps:web:dev": "node ../../packages/anarchy-tracking/ScriptUtils/UploadSourcemaps.js --dist ./dist-web --mode dev.web --no-dev-guard",
    "tracking:sourcemaps:web:prod": "node ../../packages/anarchy-tracking/ScriptUtils/UploadSourcemaps.js --dist ./dist-web --mode production.web",
    "tracking:sourcemaps:web:prod:dry": "node ../../packages/anarchy-tracking/ScriptUtils/UploadSourcemaps.js --dist ./dist-web --mode production.web --dry-run",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit"
  },
  "dependencies": {
    "@dimforge/rapier3d": "0.19.3",
    "@hellpig/anarchy-engine": "*",
    "@hellpig/anarchy-i18n": "*",
    "@hellpig/anarchy-shared": "*",
    "@hellpig/anarchy-tracking": "*",
    "dexie": "4.2.1",
    "lil-gui": "0.21.0",
    "rxjs": "7.8.2",
    "sanitize.css": "13.0.0",
    "gui": "*",
    "i18n": "*",
    "menu": "*",
    "shared": "*",
    "stats.js": "0.17.0",
    "three": "0.182.0",
    "three-viewport-gizmo": "2.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "6.0.3",
    "@vitejs/plugin-vue-jsx": "5.1.3",
    "sass-embedded": "1.97.1"
  }
}
