{
  "name": "shared",
  "author": "XXX_AUTHOR_SHORT",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "XXX_REPO_URL",
    "directory": "packages/shared"
  },
  "homepage": "XXX_HOMEPAGE_URL/tree/main/packages/shared#readme",
  "bugs": {
    "url": "XXX_BUGS_URL"
  },
  "sideEffects": false,
  "license": "MIT",
  "description": "Shared code package for 'XXX_GAME_NAME'",
  "keywords": [
    "XXX_GAME_TECH_NAME",
    "XXX_GAME_TECH_NAME-shared",
    "XXX_COMPANY_NAME"
  ],
  "files": [
    "./legal/**",
    "CHANGELOG.md",
    "NOTICE.md",
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "scripts": {
    "check:circular-dependencies": "npx dpdm -T --no-warning --no-tree --exit-code circular:1 ./src/index.ts",
    "generate:legal": "npm run generate:legal:3rd-party-licenses && npm run generate:legal:notice && npm run generate:legal:files && npm run generate:legal:sbom",
    "generate:legal:3rd-party-licenses": "npm run -w @hellpig/anarchy-legal generate:licenses -- --workspace packages/shared --out /legal/THIRD_PARTY_LICENSES.md",
    "generate:legal:files": "npm run -w @hellpig/anarchy-legal generate:files -- --workspace packages/shared --out ",
    "generate:legal:notice": "npm run -w @hellpig/anarchy-legal generate:notice -- --audit --strict --workspace packages/shared --source /legal/THIRD_PARTY_LICENSES.md --out /legal/NOTICE.md",
    "generate:legal:sbom": "npm sbom --sbom-format=cyclonedx --package-lock-only --omit=dev > ./compliance/sbom/sbom.cdx.json",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "pr:guard:ci": "npm run ts:check && npm run check:circular-dependencies && npm run lint",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit",
    "unit": "vitest run",
    "unit:coverage": "vitest run --coverage",
    "unit:coverage:ui": "vitest --ui",
    "unit:watch": "vitest"
  },
  "dependencies": {
    "dompurify": "3.3.1",
    "isomorphic-dompurify": "2.35.0"
  }
}
