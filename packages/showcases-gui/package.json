{
  "name": "showcases-gui",
  "author": "S. Panfilov",
  "private": true,
  "version": "1.1.8",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:se-panfilov/anarchy-engine.git",
    "directory": "packages/showcases-gui"
  },
  "homepage": "https://github.com/se-panfilov/anarchy-engine/tree/main/packages/showcases-gui#readme",
  "bugs": {
    "url": "https://github.com/se-panfilov/anarchy-engine/issues"
  },
  "license": "MIT",
  "description": "Anarchy Showcases-GUI â€“ a GUI for Anarchy Engine Showcases.",
  "keywords": [
    "anarchy",
    "hellpig",
    "showcases",
    "anarchy-showcases",
    "anarchy-gui"
  ],
  "files": [
    "./legal/**",
    "CHANGELOG.md",
    "NOTICE.md",
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "scripts": {
    "build:all": "npm run build:desktop && npm run build:mobile && npm run build:web",
    "build:desktop": "rimraf dist-desktop && vite build --mode production.desktop",
    "build:mobile": "rimraf dist-mobile && vite build --mode production.mobile",
    "build:web": "rimraf dist-web && vite build --mode production.web",
    "check:circular-dependencies": "npx dpdm -T --no-warning --no-tree --exit-code circular:1 ./src/main.ts",
    "generate:legal": "npm run generate:legal:3rd-party-licenses && npm run generate:legal:notice && npm run generate:legal:files && npm run generate:legal:sbom",
    "generate:legal:3rd-party-licenses": "npm run -w @hellpig/anarchy-legal generate:licenses -- --workspace packages/showcases-gui --out ../../packages/showcases-gui/legal/THIRD_PARTY_LICENSES.md",
    "generate:legal:files": "npm run -w @hellpig/anarchy-legal generate:files -- --workspace packages/showcases-gui --out ../../packages/showcases-gui",
    "generate:legal:notice": "npm run -w @hellpig/anarchy-legal generate:notice -- --audit --strict --workspace packages/showcases-gui --source ../../packages/showcases-gui/legal/THIRD_PARTY_LICENSES.md --out ../../packages/showcases-gui/legal/NOTICE.md",
    "generate:legal:sbom": "npm sbom --sbom-format=cyclonedx --package-lock-only --omit=dev > ./compliance/sbom/sbom.cdx.json",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "pr:guard:ci": "npm run ts:check && npm run check:circular-dependencies && npm run lint",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "preview": "vite preview",
    "sanitize-assets": "node ../anarchy-shared/ScriptUtils/SanitizeAssets.js ./public",
    "start:dev": "vite --mode dev --port 5083",
    "ts:check": "vue-tsc --noEmit",
    "unit": "vitest run",
    "unit:coverage": "vitest run --coverage",
    "unit:coverage:ui": "vitest --ui",
    "unit:watch": "vitest"
  },
  "dependencies": {
    "@hellpig/anarchy-engine": "*",
    "@hellpig/anarchy-i18n": "*",
    "@hellpig/anarchy-shared": "*",
    "lucide-vue-next": "0.562.0",
    "nanoid": "5.1.6",
    "sanitize.css": "13.0.0",
    "showcases-i18n": "*",
    "showcases-shared": "*",
    "vue": "3.5.26",
    "vue-i18n": "11.2.7"
  },
  "devDependencies": {
    "@types/node": "24.10.4",
    "@vitejs/plugin-vue": "6.0.3",
    "@vitejs/plugin-vue-jsx": "5.1.3",
    "@vue/test-utils": "2.4.6",
    "eslint-plugin-vue": "10.6.2",
    "sass-embedded": "1.97.1",
    "vite-plugin-wasm": "3.5.0",
    "vue-tsc": "3.2.1"
  }
}
