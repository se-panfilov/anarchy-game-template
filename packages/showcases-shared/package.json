{
  "name": "showcases-shared",
  "author": "S. Panfilov",
  "private": true,
  "version": "1.7.4",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git@github.com:se-panfilov/anarchy-engine.git",
    "directory": "packages/showcases-shared"
  },
  "homepage": "https://github.com/se-panfilov/anarchy-engine/tree/main/packages/showcases-shared#readme",
  "bugs": {
    "url": "https://github.com/se-panfilov/anarchy-engine/issues"
  },
  "sideEffects": false,
  "license": "MIT",
  "description": "Anarchy Showcases Shared â€“ a shared library for Anarchy Engine Showcases.",
  "keywords": [
    "anarchy",
    "hellpig",
    "showcases",
    "anarchy-showcases",
    "showcases-shared"
  ],
  "files": [
    "./legal/**",
    "CHANGELOG.md",
    "NOTICE.md",
    "LICENSE",
    "README.md",
    "dist/"
  ],
  "scripts": {
    "check:circular-dependencies": "npx dpdm -T --no-warning --no-tree --exit-code circular:1 ./src/index.ts",
    "generate:legal": "npm run generate:legal:3rd-party-licenses && npm run generate:legal:notice && npm run generate:legal:files && npm run generate:legal:sbom",
    "generate:legal:3rd-party-licenses": "npm run -w @hellpig/anarchy-legal generate:licenses -- --workspace packages/showcases-shared --out ../../packages/showcases-shared/legal/THIRD_PARTY_LICENSES.md",
    "generate:legal:files": "npm run -w @hellpig/anarchy-legal generate:files -- --workspace packages/showcases-shared --out ../../packages/showcases-shared",
    "generate:legal:notice": "npm run -w @hellpig/anarchy-legal generate:notice -- --audit --strict --workspace packages/showcases-shared --source ../../packages/showcases-shared/legal/THIRD_PARTY_LICENSES.md --out ../../packages/showcases-shared/legal/NOTICE.md",
    "generate:legal:sbom": "npm sbom --sbom-format=cyclonedx --package-lock-only --omit=dev > ./compliance/sbom/sbom.cdx.json",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "pr:guard:ci": "npm run ts:check && npm run check:circular-dependencies && npm run lint",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "ts:check": "tsc --noEmit",
    "ts:check:watch": "tsc --watch --noEmit",
    "unit": "vitest run",
    "unit:coverage": "vitest run --coverage",
    "unit:coverage:ui": "vitest --ui",
    "unit:watch": "vitest"
  },
  "dependencies": {
    "dompurify": "3.3.1",
    "isomorphic-dompurify": "2.35.0"
  }
}
